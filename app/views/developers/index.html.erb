<div class="container">
  <div class="row"> 
    <p id="notice"><%= notice %></p>

    <div class="col-md-6 col-xs-12">
      <h1>Developers</h1>
    </div>
    <div class="col-md-6 col-xs-12">
      <%= link_to 'New Developer', new_developer_path, class: "btn btn-success btn-sm text-white float-md-end mt-md-3" %>
    </div>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Position</th>
            <th scope="col">Title</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @developers.each do |developer| %>
            <tr>
              <td><%= developer.name %></td>
              <td><%= developer.email %></td>
              <td><%= developer.position %></td>
              <td><%= developer.title %></td>
              <td><%= link_to 'Show', developer %></td>
              <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
              <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
